#!/usr/bin/env ruby

require File.dirname(__FILE__) + '/../lib/nanite'
require File.dirname(__FILE__) + '/../lib/nanite/mapper'

Nanite.identity = Nanite.gen_token
password = ARGV[0] || 'testing'


Nanite::Runner.start  :user           => 'mapper',
                      :pass           => password,
                      :vhost          => '/nanite',
                      :host           => '0.0.0.0',
                      :ping_time      => 15
