#!/opt/local/bin/ruby

require File.dirname(__FILE__) + '/../lib/nanite'
require File.dirname(__FILE__) + '/../lib/nanite/mapper'

Nanite.identity = 'mapper'
password = ARGV[0] || 'testing'


Nanite::Runner.start  :user           => Nanite.identity,
                      :pass           => password,
                      :vhost          => '/nanite',
                      :host           => '0.0.0.0',
                      :ping_time      => 30